---
const name = "Ryan Allen";
const jobTitle = "Software Developer";
const email = "ryan@rallendev.com";
const website = "https://rallendev.com";
const image = "https://rallendev.com/images/email-ryan.jpg";
---

<table
  cellpadding="0"
  cellspacing="0"
  style="font-family: Arial, sans-serif; font-size: 14px; color: #0a0a0a; width: 100%; max-width: 300px"
>
  <tr style="border-bottom: 1px solid #000;">
    <td style="padding-right: 16px; vertical-align: middle;">
      <img
        src={image}
        width="80"
        height="80"
        alt={name}
        style="border-radius: 50%; display: block;"
      />
    </td>

    <td style="vertical-align: middle; width: 100%;">
      <strong style="font-size: 18px; display: block;">
        {name}
      </strong>

      <span style="color: #555; display: block; margin-bottom: 6px;">
        {jobTitle}
      </span>

      <hr />

      <img
        src={image}
        width="80"
        height="80"
        alt={name}
        style="border-radius: 50%; display: block;"
      />
    </td>
  </tr>
</table>

<table
  style="background-color: black; margin-top: 10px; width: 100%; max-width: 300px; padding: 10px;"
>
  <tr>
    <td colspan="2" style="padding-top: 6px;">
      <a
        href="https://github.com/rallendev"
        style="color: #555; text-decoration: none;"
      >
        GitHub
      </a>
      <a
        href="https://linkedin.com/in/rallendev"
        style="color: #555; text-decoration: none;"
      >
        LinkedIn
      </a>
    </td>
  </tr>
</table>
