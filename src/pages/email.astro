---
const name = "Ryan Allen";
const jobTitle = "Software Developer";

const email = "ryan@rallendev.com";
const phone = "+15551234567";
const website = "https://rallendev.com";
const meetingLink = "https://calendly.com/rallendev/meeting";

const avatar = "https://rallendev.com/images/email-ryan.jpg";
const logo = "https://rallendev.com/images/email-logo.png";

const icons = {
  github: "https://rallendev.com/images/icons/github.png",
  linkedin: "https://rallendev.com/images/icons/linkedin.png",
  whatsapp: "https://rallendev.com/images/icons/whatsapp.png",
  telegram: "https://rallendev.com/images/icons/telegram.png",
  email: "https://rallendev.com/images/icons/email.png",
  phone: "https://rallendev.com/images/icons/phone.png",
  globe: "https://rallendev.com/images/icons/globe.png",
};

const black = "#0a0a0a";
const muted = "#6b7280";
const accent = "#2563eb";
---

<table
  cellpadding="0"
  cellspacing="0"
  style={`font-family: Arial, sans-serif; font-size: 14px; color: ${black}; max-width: 380px;`}
>
  <!-- Top section -->
  <tr>
    <td style="padding-right: 16px; vertical-align: top;">
      <img
        src={avatar}
        width="72"
        height="72"
        alt={name}
        style="border-radius: 50%; display: block;"
      />
    </td>

    <td style="vertical-align: top;">
      <strong style="font-size: 18px; line-height: 1.2;">
        {name}
      </strong>

      <div style={`color: ${muted}; margin-top: 2px;`}>
        {jobTitle}
      </div>

      <div style="margin-top: 10px;">
        <img
          src={logo}
          width="140"
          height="32"
          alt="RallenDev"
          style="display: block;"
        />
      </div>
    </td>
  </tr>

  <!-- Divider -->
  <tr>
    <td colspan="2" style="padding: 12px 0;">
      <div style="height:1px; background:#e5e7eb;"></div>
    </td>
  </tr>

  <!-- Contact info -->
  <tr>
    <td colspan="2">
      <table cellpadding="0" cellspacing="0">
        <tr>
          <td style="padding-right: 8px;">
            <img src={icons.email} width="16" height="16" alt="" />
          </td>
          <td>
            <a href={`mailto:${email}`} style={`color:${black}; text-decoration:none;`}>
              {email}
            </a>
          </td>
        </tr>

        <tr>
          <td style="padding: 6px 8px 0 0;">
            <img src={icons.phone} width="16" height="16" alt="" />
          </td>
          <td style="padding-top: 6px;">
            <a href={`tel:${phone}`} style={`color:${black}; text-decoration:none;`}>
              {phone}
            </a>
          </td>
        </tr>

        <tr>
          <td style="padding: 6px 8px 0 0;">
            <img src={icons.globe} width="16" height="16" alt="" />
          </td>
          <td style="padding-top: 6px;">
            <a href={website} style={`color:${black}; text-decoration:none;`}>
              rallendev.com
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <!-- Social links -->
  <tr>
    <td colspan="2" style="padding-top: 12px;">
      <table cellpadding="0" cellspacing="0">
        <tr>
          <td style="padding-right: 10px;">
            <a href="https://github.com/rallendev">
              <img src={icons.github} width="18" height="18" alt="GitHub" />
            </a>
          </td>
          <td style="padding-right: 10px;">
            <a href="https://linkedin.com/in/rallendev">
              <img src={icons.linkedin} width="18" height="18" alt="LinkedIn" />
            </a>
          </td>
          <td style="padding-right: 10px;">
            <a href={`https://wa.me/${phone.replace("+","")}`}>
              <img src={icons.whatsapp} width="18" height="18" alt="WhatsApp" />
            </a>
          </td>
          <td>
            <a href="https://t.me/rallendev">
              <img src={icons.telegram} width="18" height="18" alt="Telegram" />
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <!-- CTA -->
  <tr>
    <td colspan="2" style="padding-top: 14px;">
      <a
        href={meetingLink}
        style={`
          display:inline-block;
          padding:10px 14px;
          border:1px solid ${accent};
          color:${accent};
          font-weight:600;
          text-decoration:none;
          border-radius:6px;
        `}
      >
        Book a meeting â†’
      </a>
    </td>
  </tr>
</table>