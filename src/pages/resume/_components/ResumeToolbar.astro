---
import LogoLong from "@components/branding/LongLong.astro";
import Button from "@components/ui/Button.astro";
---

<div class="resume-toolbar w-full animate-in slide-in-from-top duration-1000 motion-reduce:animate-none motion-reduce:filter-none">
  <div
    class="border-b border-divider-dark w-full flex flex-row items-center justify-between backdrop-blur bg-background-dark/90"
  >
    <div class="flex flex-row gap-2">
      <a
        class="p-4 px-6 border-r border-divider-dark fill-primary text-foreground-dark"
        href="/"
      >
        <LogoLong class="h-8" aria-hidden="true" focusable="false" />
        <span class="sr-only">Ryan Allen - rallen.dev</span>
      </a>

      <Button
        class="bg-transparent"
        variant="dark"
        as="a"
        href="/about"
        text="Go back"
        iconStart="lucide:arrow-left"
      />
    </div>

    <div>
      <Button
        class="border-t-0 border-b-0"
        variant="outline"
        onclick="window.print()"
        text="Print"
        iconEnd="lucide:printer"
        disableIconAnimation
      />
    </div>
  </div>
</div>
