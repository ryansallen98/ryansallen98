---
import Layout from "@layouts/BaseLayout.astro";
import Hero from "@components/sections/Hero.astro";

const subHeading = "More about me";
const pageTitle = "About Me";
---

<Layout title={pageTitle}>
  <Hero
    title={pageTitle}
    subHeading={subHeading}
    description="I'm Ryan Allen, a passionate freelance web developer and consultant with over a decade of experience in crafting high-quality web solutions. My expertise spans a wide range of technologies, including JavaScript, Python, and modern frameworks like React and Astro."
    buttons={[
      {
        text: "Resume",
        href: "/resume",
        variant: "light",
      },
      {
        text: "Hire Me",
        href: "/contact",
        variant: "outline",
      },
    ]}
  />
  <div class="min-h-screen"></div>
</Layout>
